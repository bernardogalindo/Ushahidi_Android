<project name="android-support-v4-googlemaps" default="jar">
	<property name="src.dir" value="src" />
	<property name="build.dir" value="build" />
	<property name="jar-v4.file" value="${build.dir}/jar/actionbarsherlock-support-v4.jar" />


	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>

	<target name="compile">
		<mkdir dir="${build.dir}/classes-v4"/>
		<javac srcdir="${src.dir}" destdir="${build.dir}/classes-v4" includeantruntime="false">
			<include name="java/**/*.java"/>
			<include name="eclair/**/*.java"/>
			<include name="froyo/**/*.java"/>
			<include name="gingerbread/**/*.java"/>
			<include name="honeycomb/**/*.java"/>
			<include name="honeycomb_mr2/**/*.java"/>
			<include name="ics/**/*.java"/>

			<!-- Exclude classes that only ship in the v13 jar -->
			<exclude name="java/android/support/v13/**/*.java"/>
			<exclude name="ics/android/support/v13/**/*.java"/>
			
		</javac>

	</target>

	<target name="jar" depends="clean, compile">
		<mkdir dir="${build.dir}/jar"/>
		<jar destfile="${jar-v4.file}" basedir="${build.dir}/classes-v4" />
	</target>
</project>
